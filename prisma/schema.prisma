generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  userType     String
  name         String
  phone        String?
  createdAt    DateTime @default(now())

  pets            Pet[]
  walkerProfile   WalkerProfile?
  ownedRequests   WalkRequest[]    @relation("OwnerRequests")
  selectedWalks   WalkRequest[]    @relation("SelectedWalker")
  applications    Application[]
  reports         WalkReport[]
}

model Pet {
  id        String   @id @default(uuid())
  ownerId   String
  name      String
  species   String
  breed     String?
  age       Int?
  weight    Float?
  notes     String?
  createdAt DateTime @default(now())

  owner    User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  requests WalkRequest[]
}

model WalkerProfile {
  id              String    @id @default(uuid())
  userId          String    @unique
  qualification   String
  certificateUrl  String?
  experienceYears Int?
  area            String
  introduction    String?
  approvalStatus  String
  createdAt       DateTime  @default(now())
  approvedAt      DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WalkRequest {
  id               String    @id @default(uuid())
  ownerId          String
  petId            String
  preferredDate    DateTime
  address          String
  duration         Int
  notes            String?
  status           String
  selectedWalkerId String?
  createdAt        DateTime  @default(now())
  confirmedAt      DateTime?
  completedAt      DateTime?

  owner          User          @relation("OwnerRequests", fields: [ownerId], references: [id], onDelete: Cascade)
  pet            Pet           @relation(fields: [petId], references: [id], onDelete: Cascade)
  selectedWalker User?         @relation("SelectedWalker", fields: [selectedWalkerId], references: [id])
  applications   Application[]
  report         WalkReport?
}

model Application {
  id        String   @id @default(uuid())
  requestId String
  walkerId  String
  message   String?
  status    String
  createdAt DateTime @default(now())

  request WalkRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  walker  User        @relation(fields: [walkerId], references: [id], onDelete: Cascade)

  @@unique([requestId, walkerId])
}

model WalkReport {
  id         String   @id @default(uuid())
  requestId  String   @unique
  walkerId   String
  reportText String
  photoUrls  String?
  walkDate   DateTime
  createdAt  DateTime @default(now())

  request WalkRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  walker  User        @relation(fields: [walkerId], references: [id], onDelete: Cascade)
}
